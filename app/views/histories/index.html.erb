<section class="history_index">
  <h1>履歴</h1>
  <p>Find me in app/views/histories/index.html.erb</p>

  <div class="history_list">
    <table cellspacing="0" border="2">
      <% @recently_ym.each do |ym| %>
        <tr>
          <td>
            <% year = ym[0] %>
            <% month = ym[1] %>
            <% sum = ym[2] %>
            <%= link_to "#{year}年 #{month}月" ,
                        history_path("#{ym[0]}-#{ym[1]}", start_date: "#{ym[0]}-#{ym[1]}-1") %>
          </td>
          <td class="monthly_sum">
            <%= "¥#{sum.to_s(:delimited)}" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <h1>棒グラフ</h1>
  <canvas id="myBarChart" width="500"></canvas>
  <script>
  var ctx = document.getElementById("myBarChart");
  var myBarChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['8月1日', '8月2日', '8月3日', '8月4日', '8月5日', '8月6日', '8月7日'],
      datasets: [
        {
          label: 'A店 来客数',
          data: [62, 65, 93, 85, 51, 66, 47],
          backgroundColor: "rgba(219,39,91,0.5)"
        },{
          label: 'B店 来客数',
          data: [55, 45, 73, 75, 41, 45, 58],
          backgroundColor: "rgba(130,201,169,0.5)"
        },{
          label: 'C店 来客数',
          data: [33, 45, 62, 55, 31, 45, 38],
          backgroundColor: "rgba(255,183,76,0.5)"
        }
      ]
    },
    options: {
      responsive: false,
      title: {
        display: true,
        text: '支店別 来客数'
      },
      scales: {
        yAxes: [{
          ticks: {
            suggestedMax: 100,
            suggestedMin: 0,
            stepSize: 10,
            callback: function(value, index, values){
              return  value +  '人'
            }
          }
        }]
      },
    }
  });
  </script>

</section>