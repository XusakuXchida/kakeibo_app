<section class="account_index">
  <h1>家計簿App index</h1>
  <p>今日の日付：<%= @today.to_s.gsub(/-/,'/') %></p>
  <div class="test"></div>

  <div class="account-form">
    <%= form_tag request.url do %>
      <table class="form_table" cellspacing="0" border="2">
        <tr class="columns">
          <td>日付</td>
          <td>カテゴリー</td>
          <td>目的</td>
          <td>金額</td>
        </tr>
        <tr>
          <td><input type="text" name="date" value="<%= @today.to_s.gsub(/-/,'/') %>" id="date"></td>
          <td>
            <select name="category">
              <option value="">選択して下さい</option>
              <% @categories.each do |category| %>
                <option><%= category.name %></option>
              <% end %>
            </select>
          </td>
          <td>
            <select name="purpose">
              <option value="">選択して下さい</option>
              <option>生活費</option>
              <option>趣味・娯楽</option>
              <option>仕事・勉強</option>
            </select>
          </td>
          <td><input type="text" name="money"></td>
        </tr>
      </table>
      <input type="submit" value="入力" class="submit_button">
    <% end %>
    <div id="calendar">
      <%= render 'calendar' %>
    </div>
  </div>

  <div calss="fix_category">
    <div class="link_button">
      <%= link_to "カテゴリーを追加・編集", categories_path %>
    </div>
    <div>
      <% @categories.each do |category| %>
        <%= category.name %>
      <% end %>
    </div>
  </div>
  <br>

  <div class="date_tables">
    <table class="data_table">
      <tr>
        <td colspan="4"><h4>今月のお買い物データ</h4></td>
      </tr>
      <tr class="columns">
        <td>日付</td>
        <td>カテゴリー</td>
        <td>目的</td>
        <td>金額</td>
      </tr>
      <% @accounts.each do |account| %>
        <tr class="account_tr">
          <td class="date"><%= account.date.to_s.gsub(/-/,'/')  %></td>
          <td class="category"><%= account.category %></td>
          <td class="purpose"><%= account.purpose %></td>
          <td class="money"><%= account.money %></td>
          <td>
            <%= link_to account_path(account.id), method: "delete", style: "color: gray;" do %>
              <i class="fa fa-trash-alt"></i>
            <% end %>
            <%= link_to edit_account_path(account.id), style: "color: gray;" do %>
              <i class="fa fa-cog"></i>
            <% end %>
          </td>
          <% @sum_money += account.money %>
          <% @sum_money_red += account.money if account.purpose == "趣味・娯楽" %>
          <% @sum_money_yellow += account.money if account.purpose == "生活費" %>
          <% @sum_money_green += account.money if account.purpose == "仕事・勉強" %>
        </tr>
      <% end %>
      <tr id="sum_tr">
        <td></td>
        <td></td>
        <td><i id="sum_td">合計 :</i></td>
        <td id="sum_money"><%= @sum_money %></td>
      </tr>
    </table>
    =========================================
    <br>
    <table class="summary_table">
      <tr>
        <td colspan="2"><h4>目的ごとサマリー</h4></td>
      </tr>
      <tr class="columns">
        <td>目的</td>
        <td>合計金額</td>
      </tr>
      <tr>
        <td class="purpose">趣味・娯楽</td>
        <td><%= @sum_money_red %></td>
      </tr>
      <tr>
        <td class="purpose">生活費</td>
        <td><%= @sum_money_yellow %></td>
      </tr>
      <tr>
        <td class="purpose">仕事・勉強</td>
        <td><%= @sum_money_green %></td>
      </tr>
      <tr>
      </tr>
    </table>
  </div>
</section>